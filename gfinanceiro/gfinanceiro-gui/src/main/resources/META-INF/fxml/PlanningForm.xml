<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.textfield.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.cell.*?>
<?import jfxtras.scene.control.*?>
<?import org.pinguin.gf.gui.control.*?>

<fx:root type="javafx.scene.layout.AnchorPane"
	xmlns:fx="http://javafx.com/fxml" AnchorPane.bottomAnchor="0.0"
	AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
	AnchorPane.topAnchor="0.0">
	<children>
		<VBox spacing="10" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<padding>
				<Insets top="10" right="10" bottom="10" left="10" />
			</padding>
			<GridPane hgap="10" vgap="10" gridLinesVisible="false">
				<columnConstraints>
					<ColumnConstraints halignment="LEFT" />
					<ColumnConstraints halignment="LEFT" />
					<ColumnConstraints halignment="LEFT" />
					<ColumnConstraints halignment="CENTER" />
				</columnConstraints>

				<Label text="MÃªs/Ano:" GridPane.rowIndex="0"
					GridPane.columnIndex="0" />
				<AutoCompleteComboBox fx:id="monthYearCombo"
					GridPane.rowIndex="0" GridPane.columnIndex="1" />

				<Button text="Incluir planejamento" onAction="#add"
					GridPane.rowIndex="0" GridPane.columnIndex="4" />
				<Button text="Incluir planejamento da conta"
					onAction="#addAccPlan" GridPane.rowIndex="0"
					GridPane.columnIndex="5" />
				<Button text="Salvar" onAction="#save" GridPane.rowIndex="0"
					GridPane.columnIndex="6" />
			</GridPane>
			<TreeTableView fx:id="accPlanTree" VBox.vgrow="ALWAYS">
				<columnResizePolicy>
					<TreeTableView
						fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TreeTableColumn fx:id="accountTColumn"
						text="Conta">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="account" />
						</cellValueFactory>
					</TreeTableColumn>
					<TreeTableColumn text="Planejado">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="value" />
						</cellValueFactory>
					</TreeTableColumn>
					<TreeTableColumn text="Realizado">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="accomplished" />
						</cellValueFactory>
					</TreeTableColumn>
					<TreeTableColumn fx:id="percentTColumn"
						text="Percentual">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="percent" />
						</cellValueFactory>
					</TreeTableColumn>
				</columns>
			</TreeTableView>
		</VBox>

	</children>
</fx:root>