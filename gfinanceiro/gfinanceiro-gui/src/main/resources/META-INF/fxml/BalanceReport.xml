<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.textfield.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.control.cell.*?>
<?import jfxtras.scene.control.*?>

<fx:root type="javafx.scene.layout.AnchorPane"
	xmlns:fx="http://javafx.com/fxml" AnchorPane.bottomAnchor="0.0"
	AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
	AnchorPane.topAnchor="0.0">
	<children>
		<VBox spacing="10" AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<padding>
				<Insets top="10" right="10" bottom="10" left="10" />
			</padding>
			<GridPane hgap="10" vgap="10" gridLinesVisible="false">
				<columnConstraints>
					<ColumnConstraints halignment="LEFT" />
					<ColumnConstraints halignment="LEFT" />
					<ColumnConstraints halignment="LEFT" />
					<ColumnConstraints halignment="CENTER" />
				</columnConstraints>

				<Label text="Data início:" GridPane.rowIndex="0"
					GridPane.columnIndex="0" />
				<CalendarTextField fx:id="startDateText"
					GridPane.rowIndex="0" GridPane.columnIndex="1" />

				<Label text="Data fim:" GridPane.rowIndex="0"
					GridPane.columnIndex="2" />
				<CalendarTextField fx:id="endDateText"
					GridPane.rowIndex="0" GridPane.columnIndex="3" />

				<Label text="TAG(s):" GridPane.rowIndex="0"
					GridPane.columnIndex="4" />
				<TextField fx:id="tagFilterText" GridPane.rowIndex="0"
					GridPane.columnIndex="5" />

				<Button text="Consultar" onAction="#retrieve"
					GridPane.rowIndex="0" GridPane.columnIndex="6" />
			</GridPane>
			<TreeTableView fx:id="balanceTree" VBox.vgrow="ALWAYS">
				<columnResizePolicy>
					<TreeTableView
						fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TreeTableColumn fx:id="balanceTColumn"
						text="Conta" />
					<TreeTableColumn text="Créditos">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="credits" />
						</cellValueFactory>
					</TreeTableColumn>
					<TreeTableColumn text="Débitos">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="debits" />
						</cellValueFactory>
					</TreeTableColumn>
					<TreeTableColumn text="Saldo">
						<cellValueFactory>
							<TreeItemPropertyValueFactory
								property="balance" />
						</cellValueFactory>
					</TreeTableColumn>
				</columns>
			</TreeTableView>
		</VBox>

	</children>
</fx:root>