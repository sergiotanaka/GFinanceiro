<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml">
	<top>
		<MenuBar>
			<menus>
				<Menu text="Ações">
					<items>
						<MenuItem text="Lançamento" onAction="#onJournalEntry" />
						<MenuItem text="Lançamento coletivo" onAction="#onJournalEntryList" />
						<MenuItem text="Consultar histórico" onAction="#onListJournalEntry" />
						<MenuItem text="Consultar resumo" onAction="#onListBalance" />
						<MenuItem text="Planejamento" onAction="#onPlanning" />
						<MenuItem text="Fluxo de Caixa" onAction="#onCashFlow" />
						<MenuItem text="Calendário" onAction="#onCalendar" />
					</items>
				</Menu>
				<Menu text="Cadastro">
					<items>
						<MenuItem text="Contas" onAction="#onMaintAccount" />
					</items>
				</Menu>
				<Menu text="Configurações">
					<items>
						<MenuItem text="Limpar lançamentos" onAction="#onClearEntries" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<!-- <StackPane> -->
		<ImageView>
			<image>
				<Image url="@../images/real-cifrao.jpg" />
			</image>
		</ImageView>
		<!-- </StackPane> -->
	</center>
</fx:root>